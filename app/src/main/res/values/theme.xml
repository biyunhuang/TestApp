<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomAppTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButtonStyle</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle</item>
        <item name="actionModeShareDrawable">@drawable/share</item>
    </style>

    <style name="ActionBarOverflowButtonStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/setting</item>
        <item name="android:textSize">14sp</item>
    </style>
    
</resources>
